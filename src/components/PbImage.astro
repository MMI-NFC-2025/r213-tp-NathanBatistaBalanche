---
import { getImageUrl } from '../script/backend.mjs';
import { Image } from "astro:assets";

const { record, recordImage } = Astro.props;

const imageURL = await getImageUrl(record, recordImage);
console.log(imageURL);

---

{imageURL && 
    <Image
        src={imageURL}
        alt={record.nomMaison || 'Image'}
        class="w-64 h-64 object-cover rounded-lg shadow-lg group-hover:shadow-orange-500/50 transition-all duration-500"
    />
}
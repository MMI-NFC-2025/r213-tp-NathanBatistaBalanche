---
import PbImage from './PbImage.astro';

const { offre } = Astro.props;
---

<ul data-favori={offre.favori.toString()} class="backdrop-blur-md bg-black/30 border border-red-400/30 rounded-lg p-3 shadow-2xl shadow-red-500/10 hover:shadow-orange-500/25 group relative transition-all duration-500 hover:-translate-y-1 hover:scale-[1.02] overflow-hidden flex flex-col space-y-1 text-xs font-medium">
    <li class="text-white font-bold text-base truncate leading-tight mb-1">{offre.nomMaison}</li>
    <li class="text-gray-300 text-xs truncate leading-tight mb-1">{offre.adresse}</li>
    <li class="text-orange-400 font-bold text-sm drop-shadow-lg">{offre.prix} €</li>
    <li class="text-gray-200 text-xs flex items-center space-x-1">
        <span>{offre.surface} m²</span>
        <span>•</span>
        <span class="text-orange-300">{offre.nbChambres} chambres</span>
        <span>•</span>
        <span class="text-orange-300">{offre.nbSdb} salles de bain</span>
    </li>
    <li class="flex-1 flex items-center justify-center">
        <PbImage record={offre} recordImage={offre.image[0]} />
   </li>
    <li class="group/card relative pt-1 self-end">
        <span class="text-xs font-semibold px-2 py-1 bg-white/10 backdrop-blur-sm rounded-full {offre.favori ? 'text-orange-400 shadow-orange-500/30' : 'text-gray-400 shadow-gray-500/20'} transition-all duration-500">
            {offre.favori ? "☆ Favori" : "Non Favori"}
        </span>
    </li>
    <a href={`/offres/${offre.id}`} class="text-orange-400 font-bold text-sm drop-shadow-lg underline">Voir plus</a>
</ul>

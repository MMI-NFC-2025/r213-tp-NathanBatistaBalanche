---
import Layout from '../../layouts/Layout.astro';
import PbImage from '../../components/PbImage.astro';
import {getOffre} from '../../script/backend.mjs'

const { id } = Astro.params;
const offre = await getOffre(id);
---

<Layout titre={offre.nomMaison}>
    <h2 class="text-4xl font-black tracking-[-0.05em] text-orange-400 drop-shadow-2xl shadow-[0_0_50px_rgba(251,146,60,0.6)] mb-12 text-center backdrop-blur-sm py-6 px-8 rounded-2xl bg-white/5 hover:scale-105 transition-all duration-500 hover:shadow-[0_0_80px_rgba(251,146,60,0.8)]">{offre.nomMaison}</h2>
    <ul class="mx-auto max-w-2xl flex flex-col items-center">
        <li class="text-2xl mb-4">{offre.adresse}</li>
        <li class="mb-2">
            <PbImage record={offre} recordImage={offre.image[0]} />
        </li>
        <li class="text-lg mb-2 text-orange-800 space-x-4">
            <span>{offre.prix} €</span>
            <span>•</span>
            <span>{offre.surface} m²</span>
        </li>
        <li class="text-lg mb-2 text-orange-800 space-x-4">
            <span>{offre.nbChambres} chambres</span>
            <span>•</span>
            <span>{offre.nbSdb} salles de bain</span>
        </li>
    </ul>
</Layout>